<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="teamai.ddd.mappers.UsersMapper">
  <resultMap id="user" type="teamai.ddd.model.User">
    <id property="identity" column="id" jdbcType="BIGINT" javaType="String"/>
    <association property="description" javaType="teamai.ddd.description.UserDescription">
      <constructor>
        <arg column="name" jdbcType="VARCHAR" javaType="String"/>
        <arg column="email" jdbcType="VARCHAR" javaType="String"/>
      </constructor>
    </association>
  </resultMap>

  <select id="findUserById" resultMap="user">
    SELECT id,
           name,
           email
    FROM users
    WHERE id = #{id}
    LIMIT 1
  </select>
</mapper>
