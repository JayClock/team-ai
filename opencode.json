{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "ai-elements": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://registry.ai-sdk.dev/api/mcp"
      ],
      "enabled": true
    },
    "nx-mcp": {
      "type": "local",
      "command": [
        "npx",
        "nx",
        "mcp"
      ],
      "enabled": true
    },
    "shadcn": {
      "type": "local",
      "command": [
        "npx",
        "shadcn@latest",
        "mcp"
      ],
      "enabled": true
    }
  }
}
