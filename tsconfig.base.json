{
  "compilerOptions": {
    "baseUrl": "./",
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["team-ai"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@shared/ui": ["libs/frontend/shared/ui/src/index.ts"],
      "@shared/ui/*": ["libs/frontend/shared/ui/src/*"],
      "@shells/layout": ["libs/frontend/layout/src/index.ts"],
      "@shells/layout/*": ["libs/frontend/layout/src/*"]
    }
  }
}
